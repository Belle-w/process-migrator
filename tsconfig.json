{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017", // to not transpile async/await
    "module": "commonjs",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}